<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhinayas.smartbutton.MainActivity"
    android:id="@+id/bgcolor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/clickdisplay"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_above="@+id/clickbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <Button
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="CLICK"
        android:id="@+id/clickbutton"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/resetbutton"
        android:layout_below="@+id/clickbutton"
        android:layout_alignRight="@+id/clickbutton"
        android:layout_alignEnd="@+id/clickbutton"
        android:layout_alignLeft="@+id/clickbutton"
        android:layout_alignStart="@+id/clickbutton" />
</RelativeLayout>
